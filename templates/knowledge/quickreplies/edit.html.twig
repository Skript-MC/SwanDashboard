{% extends 'knowledge/layout.html.twig' %}

{% block title %}Édition d'un message rapide{% endblock %}
{% block content %}
    <div class="flex-col md:flex-row px-4 py-5 border-b border-gray-200 sm:px-6">
        <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Édition d'un message rapide</h3>
            <p class="mt-1 text-sm text-gray-500">Bienvenue dans l'éditeur de messages rapides ! Effectuez vos
                changements et proposez-les.</p>
        </div>
    </div>
    <div id="app"
         data-old-name="{{ message.name }}"
         data-old-aliases="{{ message.aliases|json_encode }}"
         data-old-content="{{ message.content }}"
         data-edit="true"
         data-post-url="{{ path('knowledge_quickreplies_edit', { messageId: message.id }) }}"
         data-success-url="{{ path('knowledge_quickreplies') }}"
    ></div>
    {{ encore_entry_script_tags('editor') }}
    {{ encore_entry_link_tags('editor') }}
{% endblock %}
