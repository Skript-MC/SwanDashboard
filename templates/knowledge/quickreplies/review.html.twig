{% extends 'knowledge/layout.html.twig' %}

{% block title %}Revue d'un message rapide{% endblock %}
{% block content %}
    <div class="flex flex-col md:flex-row px-4 py-5 border-b border-gray-200 sm:px-6 justify-between items-center">
        <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Revue d'un message rapide</h3>
            <p class="mt-1 text-sm text-gray-500">
                Consultez les changements proposés par cet utilisateur
                {% if is_granted('ROLE_STAFF') and not edit.hasBeenReviewed() %} et approuvez-les{% endif %}
            </p>
        </div>
        {% if is_granted('ROLE_STAFF') and not edit.hasBeenReviewed() %}
            <div
                class="flex md:flex-row flex-col items-center space-x-0 md:space-x-1 space-y-1 md:space-y-0 mt-3 md:mt-0">
                <form method="post">
                    <input type="hidden" name="action" value="approve">
                    <button type="submit"
                            class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        Valider
                        <svg class="ml-3 -mr-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none"
                             viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                        </svg>
                    </button>
                </form>
                <form method="post">
                    <input type="hidden" name="action" value="refuse">
                    <button type="submit"
                            class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                        Annuler
                        <svg class="ml-3 -mr-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none"
                             viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </form>
            </div>
        {% endif %}
    </div>
    <div class="px-4 pb-5 sm:px-6 border-b border-gray-200">
        <dl class="sm:divide-y sm:divide-gray-200">
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-gray-500">Utilisateur</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                    {{ edit.user.username }}
                </dd>
            </div>
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-gray-500">Type de message</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">Message rapide</dd>
            </div>
            <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-gray-500">Message original</dt>
                <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                    {% if edit.message is null %}
                        Aucun (il s'agit d'un ajout)
                    {% else %}
                        <a href="{{ path('knowledge_quickreplies_edit', { messageId: edit.message.id }) }}"
                           class="inline-flex text-gray-900">
                            {{ edit.message.name }}
                            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                            </svg>
                        </a>
                    {% endif %}
                </dd>
            </div>
            <div class="pt-4 sm:pt-5 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-gray-500">Statut de la modification</dt>
                <dd class="flex flex-col mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                    {% if edit.hasBeenReviewed() %}
                        {% if edit.validated %}
                            <div class="text-green-500 inline-flex items-center">
                                <svg class="h-6 w-6 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                                </svg>
                                Validée
                            </div>
                        {% else %}
                            <div class="text-red-500 inline-flex items-center">
                                <svg class="h-6 w-6 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                                Annulée
                            </div>
                        {% endif %}
                        <p class="mt-2 text-gray-900">Traitée par {{ edit.reviewer.username }}
                            le {{ edit.reviewedAt|date('d/m/Y à H:i') }}</p>
                        <p class="mt-2 text-gray-900">Proposée le {{ edit.createdAt|date("d/m/Y \\à H:m") }}</p>
                    {% else %}
                        <div class="text-gray-400 inline-flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            En attente
                        </div>
                        <p class="mt-2 text-gray-900">Proposée le {{ edit.createdAt|date("d/m/Y \\à H:m") }}</p>
                    {% endif %}
                </dd>
            </div>
        </dl>
    </div>
    <div id="app"
         data-name="{{ edit.newName }}"
         data-old-name="{{ edit.message ? edit.message.name : "" }}"
         data-aliases="{{ edit.newAliases|json_encode }}"
         data-old-aliases="{{ edit.message ? edit.message.aliases|json_encode : "" }}"
         data-content="{{ edit.newContent }}"
         data-old-content="{{ edit.message ? edit.message.content : "" }}"
         data-read-only="true"
    ></div>
    {{ encore_entry_script_tags('editor') }}
    {{ encore_entry_link_tags('editor') }}
{% endblock %}
