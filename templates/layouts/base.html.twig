<!doctype html>
<html lang="fr">
<head>
    {% include 'layouts/head.html.twig' %}
    <title>Swan - {% block title %}{% endblock %}</title>
</head>
<body>
    <div class="flex flex-col sm:h-screen">
        <nav class="flex-shrink-0 flex-grow-0 h-20 w-full bg-white shadow-lg">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full">
                <div class="flex justify-between h-full">
                    <div class="flex">
                        <div class="flex-shrink-0 flex items-center justify-center">
                            <img class="h-14 w-auto p-1" src="https://skript-mc.fr/assets/images/logo.png" alt="Skript-MC logo">
                            <img class="ml-2 h-10 w-10" src="{{ asset('build/images/swan-logo.png') }}" alt="Logo de Swan">
                        </div>
                        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        </div>
                    </div>
                    <div class="hidden sm:ml-6 sm:flex">
                        <a href="{{ path('login') }}" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-semibold">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                            </svg> Se connecter </a>
                    </div>
                    <div class="-mr-2 flex items-center sm:hidden">
                        <a href="{{ path('login') }}" class="inline-flex items-center justify-center p-2 rounded-md text-gray-500 hover:text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-sky" aria-controls="mobile-menu" aria-expanded="false">
                            <span class="sr-only">Se connecter</span>
                            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
            <div class="sm:hidden hidden" id="mobile-menu">
                <div class="pt-2 pb-3 space-y-1">
                    <a href="{{ path('login') }}" class="border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700 block pl-3 pr-4 py-2 border-l-4 text-base font-semibold">Se connecter</a>
                </div>
            </div>
        </nav>
        {% block content %}
        {% endblock %}
    </div>
    {{ encore_entry_script_tags('app') }}
    {% for flash_message in app.session.flashBag.get('error') %}
        <script>
            Swal.fire({
                title: 'Erreur',
                icon: 'error',
                text: "{{ flash_message|raw }}"
            });
        </script>
    {% endfor %}

    {% for flash_message in app.session.flashBag.get('success') %}
        <script>
            $(document).ready(function () {
                Swal.fire({
                    title: 'Succ√®s',
                    icon: 'success',
                    text: "{{ flash_message|raw }}"
                });
            });
        </script>
    {% endfor %}
</body>
</html>
