{% extends 'layouts/app.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}
{% block content %}
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4"><i class="fas fa-{{ fa }}"></i> {{ title }}</h1>
            <p>{{ message }}</p>
        </div>
        {% if referer is defined %}
            <a href="{{ referer }}" class="btn btn-facebook btn-block"><i class="fas fa-long-arrow-alt-left"></i> Retour à la page précédente</a>
        {% endif %}
    </div>
{% endblock %}
