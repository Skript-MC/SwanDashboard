{% extends 'swan/layout.html.twig' %}

{% block title %}Modules{% endblock %}
{% block content %}
    <div class="px-4 mx-4 py-5 border-b border-gray-200 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Gestion des modules</h3>
        <p class="mt-1 text-sm text-gray-500">Consultez la liste des modules présent sur Swan, et activez-les ou désactivez-les au besoin.</p>
    </div>
    <div id="app" data-module-list="{{ moduleList|json_encode }}" data-post-url="{{ path('swan_modules_toggle') }}"></div>
    {{ encore_entry_script_tags('modules') }}
    {{ encore_entry_link_tags('modules') }}
{% endblock %}
