{% extends 'layouts/panel.html.twig' %}

{% block title %}Mon profil{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card shadow position-relative">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Mes données</h6>
                    </div>
                    <div class="card-body">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="discordId">Identifiant panel</span>
                            </div>
                            <input type="text" class="form-control" value="{{ app.user.id }}" aria-label="Identifiant" aria-describedby="discordId" readonly>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="discordId">Identifiant Discord</span>
                            </div>
                            <input type="text" class="form-control" value="{{ app.user.userId }}" aria-label="Identifiant" aria-describedby="discordId" readonly>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="discordNickname">Nom d'utilisateur</span>
                            </div>
                            <input type="text" class="form-control" value="{{ app.user.username }}" aria-label="Nom d'utilisateur" aria-describedby="discordNickname" readonly>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="discordAvatar">Avatar</span>
                            </div>
                            <input type="text" class="form-control" value="{{ app.user.avatarUrl }}" aria-label="Avatar" aria-describedby="discordAvatar" readonly>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="discordRoles">Rôles Discord</span>
                            </div>
                            <span class="input-group-text" id="discordRoles">
                                {% for role in discordRoles %}
                                    {{ role|roleBadge|raw }}
                                {% endfor %}
                            </span>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="dashRoles">Rôle Dashboard</span>
                            </div>
                            <select class="form-select" disabled>
                                <option value="ROLE_USER" {{ 'ROLE_USER' in app.user.roles ? 'selected' }}>Utilisateur</option>
                                <option value="ROLE_STAFF" {{ 'ROLE_STAFF' in app.user.roles ? 'selected' }}>Staff</option>
                                <option value="ROLE_ADMIN" {{ 'ROLE_ADMIN' in app.user.roles ? 'selected' }}>Administrateur</option>
                            </select>
                        </div>
                        <div class="input-group">
                            {# <form method="post" action="{{ path('profile:delete') }}">
                                <button type="submit" class="btn btn-danger m-1 text-white"><i class="fas fa-trash-alt"></i> Supprimer mon compte</button>
                            </form> #}
                            <a href="{{ path('login') }}" class="btn btn-info m-1 text-white"><i class="fas fa-sync-alt"></i> Rafraîchir mon compte</a>
                        </div>
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger mt-3">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
